# OpenAI (optional)
OPENAI_API_KEY=
ANALYSIS_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# SMTP (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SSL_PORT=465
# For Gmail, use full address and an App Password (with 2FA enabled).
# Mailtrap preset host: sandbox.smtp.mailtrap.io
# Ethereal preset host: smtp.ethereal.email
SMTP_USERNAME=
SMTP_PASSWORD=
# Sender and recipient are both required for SMTP send.
FROM_EMAIL=
SELF_EMAIL=

# Runtime tuning
CACHE_DIR=.cache/http
CACHE_TTL_SECONDS=1800
MAX_WORKERS=5
REQUEST_TIMEOUT_SECONDS=20
OPENAI_TIMEOUT_SECONDS=45
LOG_LEVEL=INFO
